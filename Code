#include<iostream>        //neccesarry for cout and cin objects
using namespace std;      //scope for key words

int main()
{
  int num1,num2,num3,num4,num5;  //declare variable types
  double average,sum;             //using doubles to allow for decimals
  cout << "Enter 5 numbers with spaces in between them: " <<endl;   
  cin >> num1 >> num2 >> num3 >> num4 >> num5 >>endl;
  sum = (num1+num2+num3+num4+num5);
  average = sum / 5.0;
  cout << "Number 1: " << num1 << endl;
  cout << "Number 2: " << num2 << endl;
  cout << "Number 3: " << num3 << endl;
  cout << "Number 4: " << num4 << endl;
  cout << "Number 5: " << num5 << endl;
  //display average on the screen
  cout << "The average is: " << average << endl;
  system("pause");                                      //need a better way to do this
}
